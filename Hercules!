const introText = "Welcome champion, you have selected to complete twelve tasks. But be warned: these are tasks no mortal man could complete.";
const textElement = document.getElementById("intro-text");
const startBtn = document.getElementById("start-btn");

let index = 0;

function typeWriter() {
    if (index < introText.length) {
        textElement.innerHTML += introText.charAt(index);
        index++;
        setTimeout(typeWriter, 50); // Speed of typing
    } else {
        // Show the button after the text finishes
        setTimeout(() => {
            startBtn.classList.remove("hidden");
        }, 1000);
    }
}

// Start the sequence
window.onload = typeWriter;

startBtn.addEventListener("click", () => {
    alert("The first task: The Nemean Lion awaits!");
    // Later, we will code the transition to the first level here
});
